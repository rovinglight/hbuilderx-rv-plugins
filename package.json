{
	"id": "rv-annotation",
	"name": "rv-annotation",
	"description": "文件头部注释助手",
	"displayName": "rv-annotation",
	"version": "0.1.1",
	"publisher": "rovinglight",
	"type": "commonjs",
	"scripts": {
		"build": "webpack --config webpack.config.js"
	},
	"engines": {
		"HBuilderX": "^2.7.0"
	},
	"categories": [
		"Other"
	],
	"main": "./extension",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "rv-annotation",
			"properties": {
				"author": {
					"type": "string",
					"default": "请到设置中配置「作者名」",
					"description": "作者名（会出现在 Author 字段后）"
				}
			}
		},
		"commands": [
			{
				"command": "extension.insertHeadAnnotation",
				"title": "首行注释信息"
			}
		],
		"menus": {
			"editor/context": [
				{
					"title": "添加文件头部注释",
					"group": "assist",
					"when": "editorTextFocus",
					"command": "extension.insertHeadAnnotation"
				}
			]
		},
		"keybindings": [
			{
				"command": "extension.insertHeadAnnotation",
				"key": "Ctrl+Shift+I",
				"when": "editorTextFocus",
				"macosx": "command+Shift+I"
			}
		]
	},
	"extensionDependencies": [
		"plugin-manager"
	],
	"dependencies": {
		"dayjs": "^1.11.8"
	},
	"devDependencies": {
		"copy-webpack-plugin": "^11.0.0",
		"prettier": "^2.8.8",
		"webpack": "^5.86.0",
		"webpack-cli": "^5.1.4",
		"zip-webpack-plugin": "^4.0.1"
	}
}
